#include("/templates/html_email_header.vm")
<table width="90%" cellpadding="0" cellspacing="15" align="center">
	<tr>
		<td width="100%"><span style="font-size: 18px"><b>New Email</b></span></td>
	</tr>
	<tr>
		<td width="100%">${sender} has sent you an email regarding a Nodeable <a href="${urlPrefix}/app#message/${messageId}">${messageType} message</a>:</td>
	</tr>
    <tr>
        <td width="100%">
            <blockquote>
                ${message}
            </blockquote>
    </tr>
</table>
<br />
<table width="90%" cellpadding="0" cellspacing="15" align="center" style="background-color: #edf1f8">
	<tr>
		<td width="100%"><span style="font-size: 12px">
            This message was automatically generated by <a href="${urlPrefix}">Nodeable</a>.<br/>
            Please do not reply to this message.<br/>
            You can change your notification preferences on your <a href="${urlPrefix}/app#profile">profile page</a>.
        </td>
	</tr>
</table>
#include("/templates/html_email_footer.vm")